<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="br.com.wilsonpizzas.activity.Login"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_txt_login"
            android:background="@drawable/logo"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_txt_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/estilo_edittext"
            android:hint="Telefone"
            android:padding="10dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/edit_txt_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/estilo_edittext"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="10dp" />


        <Button
            android:id="@+id/button_login"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_botao"
            android:layout_marginTop="20dp"
            android:color="@color/colorTextNomeCard"
            android:shape="rectangle"
            android:text="Entrar"
            android:textColor="@color/colorTextNomeCard" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_esqueceu_senha"
            android:text="Esqueceu seus dados? "
            android:textSize="20px" />

        <TextView
            android:id="@+id/txt_esqueceu_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obtenha uma nova senha aqui"
            android:textColor="@color/colorEsqueceuSenha"
            android:textSize="20px" />
    </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:foregroundGravity="center"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:elevation="20dp"
        android:id="@+id/progressBarLogin"
        android:background="#ffffff"
        />
    <Button
        android:id="@+id/btn_Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/estilo_botao_cadastre_se"
        android:text="Cadastre-se" />
</RelativeLayout>
