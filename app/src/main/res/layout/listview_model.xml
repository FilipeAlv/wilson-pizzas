<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/margin_card">

    <!--<ImageView-->
        <!--android:id="@+id/listImageProduto"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_margin="@dimen/margin_card" />-->
    <LinearLayout

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_card">
        <TextView
            android:id="@+id/listNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/colorTextNomeCard"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/outroSabor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabor"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/listValorProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_card">

        <ImageView
            android:id="@+id/Observacao"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/qnt_menos"
            android:background="@drawable/ic_event_note_black_24dp" />

        <TextView
            android:id="@+id/qnt_menos"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="61dp"
            android:gravity="center"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="44dp"
            android:text="1" />

        <TextView
            android:id="@+id/qnt_mais"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/listIconDelete"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold" />


        <ImageButton

            android:id="@+id/listIconDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>
</LinearLayout>